{
  "version": 2,
  "buildCommand": "pnpm build",
  "outputDirectory": "apps/main-frontend/dist",
  "installCommand": "pnpm install",
  "framework": "vite",
  "functions": {
    "apps/main-frontend/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/tools",
      "destination": "/apps/dev-tools/dist/index.html"
    },
    {
      "source": "/tools/(.*)",
      "destination": "/apps/dev-tools/dist/index.html"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
}